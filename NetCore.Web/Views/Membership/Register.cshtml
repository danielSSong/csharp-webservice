@model RegisterInfo
@{
    ViewData["Title"] = "Membership Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<div class="text-info">@Html.Raw(TempData["Message"])</div>
<div class="row">
    <div class="col-md-4">
        <form method="POST" asp-route-returnurl="@ViewData["ReturnUrl"]" asp-controller="Membership" asp-action="Register" onsubmit="btnRegister.disabled = true; return true;">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                @Html.DisplayNameFor(m => m.UserId)
                <input type="text" class="form-control" asp-for="UserId" placeholder="User ID" autofocus />
                <span class="text-danger" asp-validation-for="UserId"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(m => m.UserName)
                <input type="text" class="form-control" asp-for="UserName" placeholder="User Name" />
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(m => m.UserEmail)
                <input type="text" class="form-control" asp-for="UserEmail" placeholder="User Email" />
                <span class="text-danger" asp-validation-for="UserEmail"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(m => m.Password)
                <input type="password" class="form-control" asp-for="Password" placeholder="Password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <button type="submit" name="btnRegister" class="btn btn-lg btn-success btn-block">Membership Register</button>
            <p style="padding-top: 10px"><a asp-route-returnurl="@ViewData["ReturnUrl"]" asp-controller="Membership" asp-action="Login" class="btn btn-primary btn-block">Membership Login</a></p>
        </form>    
     </div>
</div>

